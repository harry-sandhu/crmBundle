{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                          
    "module": "ESNext",                          
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "allowJs": false,
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,
    "strict": true,                              
    "skipLibCheck": true,                        

    /* File Locations */
    "rootDir": "src",
    "outDir": "dist",

    /* Node/ESM Settings */
    "isolatedModules": true,
    "noEmitOnError": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
